											<a href="#followers-modal" class="btn color-3 size-0 hover-9">
												<p>Followers</p>
											</a>
										<% end %>
									</div>
								</div>
								<div class="follow-element2">
									<div style="margin-right: 10px; margin-left: 10px;">
