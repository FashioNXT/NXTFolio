

<!DOCTYPE html>
<html>
	<head>
		<title>FashioNXT</title>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<link rel="shortcut icon" href="<%= asset_path "favicon.jpg"%>">
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="<%= asset_path "bootstrap.min.css"%>">
		<link rel="stylesheet" href="<%= asset_path "icon.css"%>">
		<link rel="stylesheet" href="<%= asset_path "loader.css"%>">
		<link rel="stylesheet" href="<%= asset_path "search_button.css"%>">
		<link rel="stylesheet" href="<%= asset_path "idangerous.swiper.css"%>">
		<link rel="stylesheet" href="<%= asset_path "jquery-ui.css"%>">
		<link rel="stylesheet" href="<%= asset_path "stylesheet.css"%>">
		
	</head>
	<body data-spy="scroll" data-target="blog-detail-2.htmlscrollspy">
	

	<!-- THE LOADER -->

	<div class="be-loader">
    	<div class="spinner">
			<img id="spinner-img" src="<%= asset_path "logo.png"%>"  alt="">
			<p class="circle">
			  <span class="ouro">
			    <span class="left"><span class="anim"></span></span>
			    <span class="right"><span class="anim"></span></span>
			  </span>
			</p>
		</div>
    </div>
	<!-- THE HEADER -->
	<header>

		<div class="container-fluid custom-container">
			<div class="row no_row row-header">
				<div class="brand-be">
					<a href="/">
						<img class="logo-c active be_logo"  src="<%= asset_path "new_logo.png"%>" alt="logo">
						<img class="logo-c be_logo" src="<%= asset_path "logo.png"%>" alt="logo2">
						<img  class="logo-c be_logo" src="<%= asset_path "logo.png"%>" alt="logo3">
						<img class="logo-c be_logo" src="<%= asset_path "logo.png"%>" alt="logo4">
					</a>
				</div>
				<div class="header-menu-block">
					<button class="cmn-toggle-switch cmn-toggle-switch__htx"><span></span></button>
					<ul class="header-menu" id="one">
						<!--<li><a href="activity.html">Activity</a></li>-->
						<!--<li><a href="/search_profile/search">Search</a>
							<ul>
								<li><a href="search.html">Explore</a></li>
								<li><a href="people.html">People</a></li>
								<li><a href="gallery.html">Galleries</a></li>
							</ul>
						</li>-->
						<% if session[:current_user_key] %>
							<li><a href="/show_profile">My Profile</a></li>
						<% end %>
						<!--<li><a href="site-map.html">Site Map</a></li>-->
						<!--<li><a href="organization.html">Organization</a></li>-->
						<!--<li id="ad-work-li"><a id="add-work-btn" class="btn color-1" href="work.html">Add Work </a></li>-->
					</ul>
				</div>
				<div class="login-header-block">
					<div class="login_block">
						<% if session[:current_user_key] %>
						<%= link_to 'Log out', logout_path, method: :get, :class => "btn color-1 size-2 hover-2" %>
						<!--<a class="btn color-1 size-2 hover-2" href="/login_info/logout" ><i class="fa fa-room"></i>-->
						<!--Log out</a>-->
						<% else %>
						<%= link_to 'Log in', login_path, method: :post, :class => "btn btn-login color-1 size-2 hover-2" %>
						<!--<a class="btn btn-login color-1 size-2 hover-2" href="/application/login" ><i class="fa fa-room"></i>-->
						<!--Log in</a>-->
						<% end %>
					</div>
				</div>
			</div>
		</div>


	</header>
	
	
	<!-- MAIN CONTENT -->
	<div id="content-block">
		<div class="container be-detail-container">
			<div class="row">
				<%= form_for @general_info, :action => 'update', :url => general_info_update_path do |form| %>
					<div class="col-xs-12 col-md-9 _editor-content_">
						<div class="custom-sec"  data-sec="basic-information">
							<div id="custom-sec" class="be-large-post">
								<div id="custom-sec" class="info-block style-2">
									<div class="be-large-post-align "><h3 class="info-block-label">Update Personal Details</h3></div>
								</div>
								<div class="be-large-post-align">
									<div class="be-change-ava col-xs-12 col-sm-6">
										<label class="custom-file-label" for="customFile">Update Profile Picture</label>
										<!--<input type="file" id="file" class="custom-file-input">-->
										<%= form.file_field :profile_picture, accept: 'image/png,image/jpeg',:class => 'custom-file-input', :type => 'file' %>
									</div>
								</div>
								<div class="be-large-post-align">
									<div class="be-change-ava col-xs-12 col-sm-6">
										<label class="custom-file-label" for="customFile">Update Cover Picture</label>
										<%= form.file_field :cover_picture, accept: 'image/png,image/jpeg',:class => 'custom-file-input', :type => 'file' %>
									</div>
								</div>

								<div class="be-large-post-align">
									<div class="be-change-ava col-xs-12 col-sm-6">
										<label class="custom-file-label" for="customFile"></label>
										<label class="custom-file-label" for="customFile"></label>
									</div>
								</div>
								<div class="be-large-post-align">
									<div class="be-change-ava col-xs-12 col-sm-6">
										<label class="custom-file-label" for="customFile"></label>
										<label class="custom-file-label" for="customFile"></label>
									</div>
								</div>

								<div class="be-large-post-align">
									<div class="row">
										<!--name-->
										<div class="input-col col-xs-12 col-sm-6">
											<div class="form-group fg_icon focus-2">
												<div class="form-label">First Name</div>
												<%= form.text_field :first_name, id: "first_name", :class =>'form-input', :required => '', :type => 'text', :placeholder => 'required*'%>
												<!--<input class="form-input" type="text" value="Taylor">-->
											</div>
										</div>
										<div class="input-col col-xs-12 col-sm-6">
											<div class="form-group focus-2">
												<div class="form-label">Last Name</div>
												<!--<input class="form-input" type="text" value="Leight">-->
												<%= form.text_field :last_name, id: "last_name", :class =>'form-input', :required => '', :type => 'text', :placeholder => 'required*'%>
											</div>
										</div>

										<div class="input-col col-xs-12 col-sm-10">
											<div class="form-group focus-2">
												<div class="form-label">Company Name</div>
												<%= form.text_field :company, id: "company", :class =>'form-input', :required => '', :type => 'text'%>

												<!--input class="form-input" type="text" id="company">-->
											</div>
										</div>
										<!--birthday-->
										<div class="input-col col-xs-12 col-sm-6">
											<div class="buttongroup-class">
												<div class="form-group focus-2">
													<div class="form-label">Category</div>
													<%= form.select :industry, options_for_select([["Select", ""], "Creators", "Services", "Makers"], :selected => form.object.industry), {}, {class:'form-input select2 select2-hidden-accessible', style: 'width: 70%;', tabindex: '-1'} %>
												</div>
											</div>
										</div>

										<div class="input-col col-xs-12 col-sm-6">
											<div class="buttongroup-class">
												<div class="form-group focus-2">
													<div class="form-label">Profession</div>
													<%= form.select :job_name, options_for_select([["Select", ""], "Brand Owner", "Designer", "Other Creator", "Model", "Photographer", "Sales", "Marketing", "Retail", "Visual", "Content Creator", "Blogger", "Influencer", "Forecasting", "Finances", "Other Services", "Manufacturing", "Materials", "Other Makers" ], :selected => form.object.job_name), {}, {class:'form-input select2 select2-hidden-accessible', style: 'width: 70%;', tabindex: '-1'} %>
												</div> <!-- /.form-group -->
											</div>
										</div>


										<div class="input-col col-xs-12 col-sm-10">
											<div class="form-group focus-2">
												<div class="form-label">Highlights</div><label>Elevator pitch: Known brands you worked with, impressive accomplishments</label>
												<%= form.text_area :highlights, id: "highlights", :class =>'form-input', :maxlength => '2000', :rows => '3'%>
												<span class="pull-right label label-default" id="count_message"></span>
											</div>
										</div>


										<div class="input-col col-xs-12 col-sm-10">
											<div class="form-label">Location</div>
												<div class="form-group focus-2">
													<form accept-charset="UTF-8">
														<div class="col-sm-4">
															<div class="form-group focus-2">
																<%= form.label :country %>
																<%= form.select :country, options_from_collection_for_select(@countries, 'name', 'name',  :selected => form.object.country), {:prompt => "Select Country"}, {class: "countries form-control", style: "color: black"} %>
																<!--
																<select name="general_info[country]" class="countries form-control" id="country" required style="color: black;" >
																	<option value="">Select Country</option>
																	<%#<% @countries.each do |country| %>
																		<%#<option value="<%= country.id %><%#">%>
																			<%#<%= country.name %>
																		<%# </option> %>
																	<%#<% end %>
																	<option value="">Select Country</option>
																</select>
																-->
															</div>
														</div>
													</form>

													<!- State and City>

													<div class="col-sm-4">
														<%= form.label :state %>
														<%= form.select :state, options_from_collection_for_select(@countries.find_by_name(form.object.country).states, 'name', 'name',  :selected => form.object.state), {:prompt => "Select State"}, {class: "states form-control", style: "color: black"} %>
														<!--
														<select name="general_info[state]" class="states form-control" id="state" required style="color: black;" >
															<option value="">Select State</option>
														</select>
														-->
													</div>
													<div class="col-sm-4">
														<%= form.label :city %>
														<%= form.text_field :city, id: "city", class: 'cities form-input', :type => 'text', required: true, style: "height: 35px;" %>
														<%# <select name="general_info[city]" class="cities form-control" id="city" required style="color: black;" >
															<option value="">Select City</option>
														</select> %>
													</div>
												</div>
										</div>


										<div class="input-col col-xs-12 col-sm-10">
											<div class="form-group focus-2">
												<div class="form-label">Email</div>
												<%= form.text_field :emailaddr, id: "emailaddr", name: "general_info[emailaddr]", :class =>'form-input', :required => '', :type => 'text'%>
											</div>
										</div>

										<div class="input-col col-xs-12 col-sm-12">
											<div class="be-vidget back-block">

												<%= form.submit 'UPDATE AND CONTINUE', :class => 'btn color-9-4 size-1 hover-1',name: "select_one" %>
												<!--<a class="btn color-1 size-1 hover-1" href="/edit_job_path" method="get"> <i class="fa fa-chevron-right"></i></a>-->
											</div>
										</div>


										<!--gender-->

									</div>
								</div>
							</div>
						</div>

					</div>
				<% end %>
			</div>
		</div>
	</div>
	<%= render 'shared/footer' %>
	
	<div class="be-fixed-filter"></div>
	<!-- SCRIPT	-->
	<script src="<%= asset_path "jquery.min.js"%>"></script>
	<script src="<%= asset_path "jquery-ui.js"%>"></script>
	<script src="<%= asset_path "bootstrap.min.js"%>"></script>		
	<script src="<%= asset_path "idangerous.swiper.min.js"%>"></script>
	<script src="<%= asset_path "jquery.mixitup.js"%>"></script>
	<script src="<%= asset_path "jquery.viewportchecker.min.js"%>"></script>
	<script src="<%= asset_path "global.js"%>"></script>
	<script src="<%= asset_path "location.js"%>"></script>
	<script>
		var text_max = 2000;
		$('#count_message').html('0 / ' + text_max );

		$('#highlights').keyup(function() {
			var text_length = $('#highlights').val().length;
			var text_remaining = text_max - text_length;

			$('#count_message').html(text_length + ' / ' + text_max);
		});
	</script>
	<script src="<%= asset_path "professionPicker.js"%>"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
	</body>
</html>
