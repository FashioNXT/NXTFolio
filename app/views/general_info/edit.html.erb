	                    							<%= form.text_field :phone, :class => 'form-input', :placeholder => 'Enter a valid phone number*', :type => 'number', :required => ''%>
											</div>								
										</div>																
									</div>
								</div>
							</div>
						</div>
						<div class="sec"  data-sec="profession-info">
							<div class="be-large-post">
								<div class="info-block style-2">
									<div class="be-large-post-align"><h3 class="info-block-label">Proffesion Information</h3></div>
								</div>
								<div class="be-large-post-align">
									<div class="row">
										<!--occupation-->
										<!--<div class="input-col col-xs-12 col-md-6">-->
										<!--	<div class="form-group focus-2">-->
										<!--		<div class="form-label">Occupation</div>-->
										<!--		<div>-->
										<!--			<span class="input-group-addon"><i class="fa fa-user" style="font-size:20px" aria-hidden="true"></i></span>-->
		        <!--              						<%= form.select :job_name, options_for_select(@possible_Jobs),{},{ :class => 'form-control' } %>-->
										<!--		</div>-->
										<!--	</div>								-->
										<!--</div>-->
										<!--compensation-->
										<div class="input-col col-xs-12 col-md-6 col-md-offset-3">
											<div class="form-group focus-2">
												<div class="form-label">Compensation Type</div>
												<div>
													<span class="input-group-addon"><i class="fa fa-dollar" style="font-size:20px" aria-hidden="true"></i></span>
		                      						<%= form.select :compensation, options_for_select([["SELECT", "Select type of Compensation"],["Assignment Based","Assignment Based"],["Paid Only","Paid Only"]], form.object.compensation || "Any Payment"),{},{ :class => 'form-control' }%>
												</div>
											</div>								
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="sec" data-sec="on-the-web">
							<div class="be-large-post m-social">
								<div class="info-block style-2">
									<div class="be-large-post-align"><h3 class="info-block-label">On The Web</h3></div>
								</div>
								<div class="be-large-post-align">
									<div class="social-input form-group focus-2">
										<div class="s_icon">
											<div class="social-bars"><i class="fa fa-bars"></i></div>
											<a class="social-btn color-1"><i class="fa fa-facebook"></i></a>
										</div>
										<div class="s_input">
											<!--<input class="form-input" type="text" value="http:// facebook.com/taylor">-->
											<%= form.text_field :facebook_link, :placeholder=> 'Enter your Facebook profile link', :class => 'form-input', :type => 'text'%>
										</div>
									</div>
									<div class="social-input form-group focus-2">
										<div class="s_icon">
											<div class="social-bars"><i class="fa fa-bars"></i></div>
											<a class="social-btn color-5"><i class="fa fa-linkedin"></i></a>
										</div>
										<div class="s_input">
											<!--<input class="form-input" type="text" value="http:// twitter.com/taylor">-->
											<%= form.text_field :linkedIn_link, :placeholder=> 'Enter your LinkedIn profile', :class => 'form-input' %>
										</div>
									</div>
									<div class="social-input form-group focus-2">
										<div class="s_icon">
											<div class="social-bars"><i class="fa fa-bars"></i></div>
											<a class="social-btn color-3"><i class="fa fa-globe"></i></a>
										</div>
										<div class="s_input">
											<!--<input class="form-input" type="text" value="http:// googleplus.com/taylor">-->
											<%= form.text_field :personalWebsite_link, :placeholder=> 'Enter your personal website link', :class => 'form-input' %>
										</div>
									</div>																													
								</div>
							</div>
						</div>
		
						<div class="sec"  data-sec="about-me" >
							<div class="be-large-post">
								<div class="info-block style-2">
									<div class="be-large-post-align"><h3 class="info-block-label">About Me</h3></div>
								</div>
								<div class="be-large-post-align">
									<div class="row">
										<div class="input-col col-xs-12">
											<div class="form-group focus-2">
												<div class="form-label">Write about yourself. Tell us what makes you unique and different, what are your hobbies and skills, and etc.</div>
												<!--<textarea class="form-input" required="" placeholder="Something about you"></textarea>-->
												<%= form.text_area :bio, :placeholder=> 'Something about you', :class => 'form-input' %>
											</div>
										</div>
										<div class="input-col col-xs-12 col-sm-4">
											<div class="be-vidget back-block">
												<a class="btn full color-1 size-1 hover-1" href="/show_profile" method="get"><i class="fa fa-chevron-left"></i>CANCEL</a>
											</div>
										</div>
										<div class="input-col col-xs-12 col-sm-8">
											<div class="be-vidget back-block">
												<%= form.submit 'UPDATE', :class => 'btn full color-1 size-1 hover-1' %>
												<!--<a class="btn full color-1 size-1 hover-1" href="/edit_job_path" method="get"> <i class="fa fa-chevron-right"></i></a>-->
											</div>
										</div>
									</div>
								</div>						
							</div>
						</div>
					</div>	
				<% end %>
			</div>
		</div>
	</div>
