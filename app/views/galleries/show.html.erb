  <body data-spy="scroll" data-target="blog-detail-2.htmlscrollspy">
  <!-- THE LOADER -->

	<div class="be-loader">
    	<div class="spinner">
			<img id="spinner-img" src="<%= asset_path "logo.png"%>"  alt="">
			<p class="circle">
			  <span class="ouro">
			    <span class="left"><span class="anim"></span></span>
			    <span class="right"><span class="anim"></span></span>
			  </span>
			</p>
		</div>
    </div>

    
    <!-- Main Content -->
    <div class = "container be-detail-container">
      <h2> <%= @gallery.gallery_title %> </h2>

      
    </div>

    <div class = "container be-detail-container">
      <h3> Description: </h3>
      <p> <%= @gallery.gallery_description %> </p>

<!--NXTFolio : Added in Spring 2023 for tagging feature.-->
<div class="collaborators">
<h3>Collaborators:</h3>
<ul>
<% @gallery.tagged_users.each do |user| %>
 <div class="collab"><li><a href="<%= show_profile_show_profile_path(:user_key => user.userKey) %>"><%= user.emailaddr %></a></li></div>
<% end %>
</ul>
<% if session[:current_user_key] %>
		<% current_user=GeneralInfo.find_by(userKey: session[:current_user_key]) %>
		<% profile_user_id=@gallery.GeneralInfo_id %>
		<% if current_user.id==profile_user_id %>
      <%= form_with(model: [@gallery, @gallery_tagging], url: create_tagging_gallery_path(@gallery.id), local: true) do |form| %>
        <%= form.label :tagged_user_id, 'Tag User:' %>
        <%= form.collection_select :tagged_user_id, GeneralInfo.where.not(id: current_user.id), :id, :emailaddr,{}, { multiple: true } %>
        <%= form.label :invited_email, 'Invite User:' %>
        <%= form.email_field :invited_email %>
        <%= form.submit 'Tag' %>
      <% end %>
    <% end %>
<% end %>
</div>
      <h3> All Images: </h3>
    </div>

    <div class="container-fluid custom-container">
            <div class="row profile-row">
                <div class="col-md-10 col-md-offset-1">
                    <div id="container-mix"  class="row _post-container_">
                        <div class="be-post">
                            <% @gallery.gallery_picture.each do |image| %>
                                <div class="col-md-3">
                                  <div class="photo photo-type-line">
                                  <div class="profile-img-container">
                                  <a class="be-img-block profile-img img-thumbnail">
                                    <img src="<%= image.url %>" alt="omg">
																		
																		<%= link_to 'View Image', image_path(image), method: :delete, data: { confirm: "Are you sure you want to delete this image?" } %>
                          
                                  </a>
                                  </div>
                                  </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <%= link_to 'Add Another Gallary', 'new' %>
    <a class="btn full color-1 size-1 hover-1" href="/show_profile" method="get"><i class="fa fa-chevron-left"></i>Back</a>
    
    <!-- MAIN CONTENT END -->
