  <div id="SPECIFICFORM">
    <br>
    <div class="container">
      <h1>
        <b>SEARCH FOR FASHION PROFILES</b>
      </h1>
      <%= form_tag(search_profile_search_login_path, :method => 'get') do %>
        <div class="row main">
          <div class="main-center">
            <form class="" method="post" action="#">
              <div class="form-group">
                <label for="first_name" class="cols-sm-2 control-label">Email Id</label>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                    <%= text_field_tag "email", nil, class: 'form-control', placeholder: "Enter email id"%>
                    <%= select_tag "email_regex", options_for_select([['Contains', 'Contains'], ['Starts With', 'Starts With'], ['Ends With', 'Ends With'], ['Exactly Matches','Exactly Matches']]), :class => 'form-control' %>
                    </p>
                  </div>
                </div>
              </div>
              <div class="form-group ">
                <!-- <a href="http://deepak646.blogspot.in" target="_blank" type="button" id="button" class="btn btn-primary btn-lg btn-block login-button">Register</a> -->
                <%= button_tag 'Search' , :class => 'btn btn-default' %>
              </div>
            </form>
          </div>
        </div>
        <%end%>
      <br>
      <h2>OR</h2>

      <%= form_tag(search_profile_search_general_path, :method => 'get') do %>
        <div class="row main">
          <div class="main-center">

            <form class="" method="post" action="#">
              <div class="form-group">
                <label for="first_name" class="cols-sm-2 control-label">First Name</label>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                    <%= text_field_tag "first_name", nil, class: 'form-control', placeholder: "Enter the First Name"%>
                    <%= select_tag "first_name_regex", options_for_select([['Contains', 'Contains'], ['Starts With', 'Starts With'], ['Ends With', 'Ends With'], ['Exactly Matches','Exactly Matches']]), :class => 'form-control' %>
                    </p>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="last_name" class="cols-sm-2 control-label">Last Name</label>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                    <%= text_field_tag "last_name", nil, class: 'form-control', placeholder: "Enter the Last Name"%>
                    <%= select_tag "last_name_regex", options_for_select([['Contains', 'Contains'], ['Starts With', 'Starts With'], ['Ends With', 'Ends With'], ['Exactly Matches','Exactly Matches']]), :class => 'form-control' %>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="gender" class="cols-sm-2 control-label">Gender</label>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <%= select_tag "gender", options_for_select([['Any', 'Any'], ['Male', 'Male'], ['Female', 'Female']]), :class => 'form-control' %>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="country" class="cols-sm-2 control-label">Country</label>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-map-marker fa" aria-hidden="true"></i></span>
                    <%= select_tag "country", options_for_select([["",""],["United States", "United States"]]),:class => 'form-control' %>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="state" class="cols-sm-2 control-label">State</label>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-map-marker fa" aria-hidden="true"></i></span>
                    <%= select_tag "state", options_for_select(CS.states(:us)),include_blank:true,:class => 'form-control'%>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="city" class="cols-sm-2 control-label">City</label>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-map-marker fa" aria-hidden="true"></i></span>
                    <%= text_field_tag "city", nil, class: 'form-control', placeholder: "College Station"%>

                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="distance" class="cols-sm-2 control-label">Distance</label>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-map-marker fa" aria-hidden="true"></i></span>
                    <%= text_field_tag "distance", nil, class: 'form-control', placeholder: "20 miles"%>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="compensation" class="cols-sm-2 control-label">Compensation</label>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <%= select_tag "compensation", options_for_select([['Any', 'Any'], ['Assignment Based', 'Assignment Based'], ['Pay Only', 'Pay Only']]), :class => 'form-control' %>
                     </p>  
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="profession" class="cols-sm-2 control-label">Profession</label>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <%= select_tag "profession", options_for_select([['Any', '0'], ['Designer', '1'], ['Model', '2'], ['Photographer', '3']]), :class => 'form-control' %>
                  </div>
                </div>
              </div>


              <div class="form-group ">
                <!-- <a href="http://deepak646.blogspot.in" target="_blank" type="button" id="button" class="btn btn-primary btn-lg btn-block login-button">Register</a> -->
                <%= button_tag 'Submit' , :class => 'btn btn-default' %>
              </div>




            </form>
          </div>
        </div>
      <% end %>
          </div>
