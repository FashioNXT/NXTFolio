<!DOCTYPE html>
<html>
	<head>
		<title>FashioNXT</title>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<link rel="shortcut icon" href="<%= asset_path "favicon.jpg"%>">
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="<%= asset_path "bootstrap.min.css"%>">
		<link rel="stylesheet" href="<%= asset_path "icon.css"%>">
		<link rel="stylesheet" href="<%= asset_path "loader.css"%>">
		<link rel="stylesheet" href="<%= asset_path "idangerous.swiper.css"%>">
		<link rel="stylesheet" href="<%= asset_path "jquery-ui.css"%>">
		<link rel="stylesheet" href="<%= asset_path "stylesheet.css"%>">
		<link rel="stylesheet" href="<%= asset_path "notifications.css"%>">
		
	</head>
	<body data-spy="scroll" data-target="blog-detail-2.htmlscrollspy">
	

	<!-- THE LOADER -->

	<div class="be-loader">
    	<div class="spinner">
			<img id="spinner-img" src="<%= asset_path "logo.png"%>"  alt="">
			<p class="circle">
			  <span class="ouro">
			    <span class="left"><span class="anim"></span></span>
			    <span class="right"><span class="anim"></span></span>
			  </span>
			</p>
		</div>
    </div>
	<!-- THE HEADER -->
<%= render 'shared/header' %>
	
	
	<!-- MAIN CONTENT -->
	<div id="content-block">
		<div class="container be-detail-container">
			<div class="row">
				<div class="col-xs-12 col-md-3 left-feild">
					<div class="be-vidget hidden-xs hidden-sm" id="scrollspy">
						<h3 class="letf-menu-article">
							Select Search
						</h3>
						<div class="creative_filds_block">
							<ul class="ul nav">
								<li class="edit-ln"><a href="#search-by-mail">Search by Email</a></li>
								<li class="edit-ln"><a href="#advanced-search">Advanced Search</a></li>
							</ul>
						</div>	
					</div>
	
				</div>
					<div class="col-xs-12 col-md-9 _editor-content_">
					  <%= form_tag(search_profile_search_login_path, :method => 'get') do %>
						<div class="sec"  data-sec="search-by-mail">
							<div class="be-large-post">
								<div class="info-block style-2">
									<div class="be-large-post-align "><h3 class="info-block-label">Search By Email</h3></div>
								</div>
								<div class="be-large-post-align">
									<div class="row">
										<!--email-->
										<div class="input-col col-xs-12 col-sm-8 col-sm-offset-2">
											<div class="form-group fg_icon focus-2">
												<!--<div class="cols-sm-10">-->
        									<div class="input-group">
        										<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
        										<%= text_field_tag "email", nil, class: 'form-control', placeholder: "Enter email id"%>
        										<%= select_tag "email_regex", options_for_select([['Contains', 'Contains'], ['Starts With', 'Starts With'], ['Ends With', 'Ends With'], ['Exactly Matches','Exactly Matches']]), :class => 'form-control' %>
        										</p>
        									</div>
        								<!--</div>-->
											</div>
										</div>
										<div class="input-col col-xs-12 col-sm-12">
											<div class="form-group fg_icon focus-2">
												<div class="form-group ">
								          <%= button_tag 'Search' , :class => 'btn btn-block color-2 size-1 hover-3' , :name => 'Search by email' %>
        						    </div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<% end %>
						
						<%= form_tag(search_profile_search_general_path, :method => 'get') do %>
						<div class="sec"  data-sec="advanced-search">
							<div class="be-large-post">
								<div class="info-block style-2">
									<div class="be-large-post-align"><h3 class="info-block-label">Advanced Search</h3></div>
								</div>
								<div class="be-large-post-align">
									<div class="row">	
										<!--profession-->
										<div class="input-col col-xs-12 col-sm-8 col-sm-offset-2">
											<div class="form-group fg_icon focus-2">
												<!--<div class="cols-sm-10">-->
												  <div class="form-label  ">Proffesion</div>
        									<div class="input-group">
        										<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                                <%= select_tag "job_type", options_for_select(@possible_Jobs), :class => 'form-control' %>
        										</p>
        									</div>
        								<!--</div>-->
											</div>
										</div>
										<!--submit button-->
										<div class="input-col col-xs-12 col-sm-12">
											<div class="form-group fg_icon focus-2">
												<div class="form-group ">
								          <%= button_tag 'Search' , :class => 'btn btn-block color-2 size-1 hover-3' %>
        						    </div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<% end %>
					</div>
			</div>
		</div>
	</div>
	<footer>	
		<div class="footer-main">
			<div class="container-fluid custom-container">
				<div class="row">	
					<div class="col-md-3 col-xl-4">
						<div class="footer-block">
							<h1 class="footer-title">About Us</h1>
							<p>FashioNXT creates innovative fashion experiences and the creative edge in lifestyle technology.</p>
							<ul class="soc_buttons">
								<li><a href="https://www.facebook.com/FASHIONXtONLINE/"><i class="fa fa-facebook"></i></a></li>
								<li><a href="https://twitter.com/fashionxtonline"><i class="fa fa-twitter"></i></a></li>
								<li><a href="https://www.pinterest.com/fashionxtonline/"><i class="fa fa-pinterest"></i></a></li>
								<li><a href="https://www.instagram.com/fashionxtonline/"><i class="fa fa-instagram"></i></a></li>
								<li><a href="https://www.linkedin.com/company/fashionxt/"><i class="fa fa-linkedin"></i></a></li>
							</ul>
						</div>
					</div>
					<div class="col-md-6 col-xl-2">
						<div class="footer-block">
							<h1 class="footer-title">Some Links</h1>
							<div class="row footer-list-footer">
							<div class="col-md-6">
							<ul class="link-list">
                                <li><a href="https://fashionxt.com/agency/">About Us</a></li>
                                <li><a href="https://fashionxt.com/contact/">Help</a></li>
                                <li><a href="https://fashionxt.com/contact/">Contacts</a></li>
                                <li><a href="https://www.linkedin.com/company/fashionxt/jobs/">Job</a></li>
							</ul></div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="footer-bottom">
			<div class="container-fluid custom-container">
				<div class="col-md-12 footer-end clearfix">
					<div class="left">
						<span class="copy">Â© 2018. All rights reserved. <span class="white"><a href="fashionxt.com"> FashioNXT</a></span></span>
						<span class="created">Created with LOVE by <span class="white"><a href=""> ThatSoftwareEngineeringGroup</a></span></span>
					</div>
				</div>			
			</div>
		</div>		
	</footer>

	<div class="be-fixed-filter"></div>
	<%= form_for :login_info, :action => 'login_submit', :url => login_info_login_submit_path do |form| %>
	<div class="large-popup login">
		<div class="container large-popup-container">
			<div class="row">
				<div class="col-md-8 col-md-push-2 col-lg-6 col-lg-push-3  large-popup-content">
					<div class="row">
						<div class="col-md-12">
							<i class="fa fa-times close-button"></i>
							<h5 class="large-popup-title">Log in</h5>
						</div>
						<form action="#" class="popup-input-search" method="post">
						<div class="col-md-6">
							<%= form.text_field :email, :class => 'input-signtype', :id => 'email', :placeholder => 'Your Email', :required => ''%>
							<!--<input class="input-signtype" type="email" required="" placeholder="Your email">-->
						</div>
						<div class="col-md-6 form-group">
							<%= form.password_field :password, :class => 'input-signtype', :id => 'password', :placeholder => 'Your Password', :required => '' %>
							<!--<input id= "password" class="input-signtype" type="password" required="" placeholder="Password">-->
						</div>
						<div class="col-xs-6"></div>
						<div class="col-xs-6 for-signin">
							<%= form.submit "SIGN IN", :class => 'be-popup-sign-button', :type => 'submit' %>
							<!--<input type="submit" class="be-popup-sign-button" value="SIGN IN">-->
						</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<% end %>
	<!-- SCRIPT	-->
	<script src="<%= asset_path "jquery.min.js"%>"></script>
	<script src="<%= asset_path "jquery-ui.js"%>"></script>
	<script src="<%= asset_path "bootstrap.min.js"%>"></script>		
	<script src="<%= asset_path "idangerous.swiper.min.js"%>"></script>
	<script src="<%= asset_path "jquery.mixitup.js"%>"></script>
	<script src="<%= asset_path "jquery.viewportchecker.min.js"%>"></script>
	<script src="<%= asset_path "global.js"%>"></script>
	</body>
</html>
