<!DOCTYPE html>
<html>
<head>
  <title>FashioNXT</title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <link rel="shortcut icon" href="<%= asset_path "favicon.jpg"%>">
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1.0 user-scalable=no">
  <link rel="stylesheet" href="<%= asset_path "bootstrap.min.css"%>">
  <link rel="stylesheet" href="<%= asset_path "icon.css"%>">
  <link rel="stylesheet" href="<%= asset_path "loader.css"%>">
  <link rel="stylesheet" href="<%= asset_path "idangerous.swiper.css"%>">
  <link rel="stylesheet" href="<%= asset_path "jquery-ui.css"%>">
  <link rel="stylesheet" href="<%= asset_path "stylesheet.css"%>">
  <link rel="stylesheet" href="<%= asset_path "profile.css"%>">
  <link rel="stylesheet" href="<%= asset_path "search_button.css"%>">

</head>
<div >

<!-- THE LOADER -->

<div class="be-loader">
  <div class="spinner">
    <img id="spinner-img" src="<%= asset_path "logo.png"%>"  alt="">
    <p class="circle">
			  <span class="ouro">
			    <span class="left"><span class="anim"></span></span>
			    <span class="right"><span class="anim"></span></span>
			  </span>
    </p>
  </div>
</div>

<!-- THE HEADER -->

<header>

  <div class="container-fluid custom-container">
    <div class="row no_row row-header">
      <div class="brand-be">
        <a href="/">
          <img class="logo-c active be_logo"  src="<%= asset_path "new_logo.png"%>" alt="logo">
          <img class="logo-c be_logo" src="<%= asset_path "logo.png"%>" alt="logo2">
          <img  class="logo-c be_logo" src="<%= asset_path "logo.png"%>" alt="logo3">
          <img class="logo-c be_logo" src="<%= asset_path "logo.png"%>" alt="logo4">
        </a>
      </div>

    </div>
  </div>


</header>

<!-- MAIN CONTENT -->

<div id="content-block">
  <div class="head-bg">
    <div class="head-bg-img"></div>

    <div class="large-popup-fixed"></div>
    <% if flash[:notice] %>
      <div class="alert-container col-md-12">
        <div class="alert style-3 alert-dismissible">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <strong><%= flash[:notice]%></strong>
        </div>
      </div>
    <% elsif flash[:success] %>
      <div class="alert-container col-md-12">
        <div class="alert style-3 alert-dismissible">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <strong><%= flash[:success]%></strong>
        </div>
      </div>
    <% end %>


    <div class="head-bg-content">
      <div class="col-md-12">
        <!--
        <div class="col-md-4">
          <h1>Sign In/Up via</h1>
            <div class ="row-fluid">
              <div class = "span2">
                <%= button_to user_facebook_omniauth_authorize_path, method: :post, class: "btn color-1 size-1 hover-1" do %>
                  <i class = "fa fa-facebook"></i>Facebook
                <%end %>
              </div>
              <br>
              <div class = "span2">
                <%= button_to user_google_oauth2_omniauth_authorize_path, class: "btn color-1 size-1 hover-1" do %>
                  <i class = "fa fa-google"></i>Google
                <%end %>
              </div>
            </div>
        </div>
        -->

        <!-- Log In -->
        <div class="col-md-4">
          <h1>Log In</h1>
          <div class="row-fluid">
              <%= form_for :login_info, :action => 'login_submit', :url => login_info_login_submit_path do |form| %>
                  <form action="#" class="popup-input-search" method="post">
                    <div class="span3">
                      <%= form.text_field :email, :class => 'input-signtype', :id => 'email', :placeholder => 'Your Email', :required => ''%>
                    </div>
                    <br>
                    <div class="span3">
                      <%= form.password_field :password, :class => 'input-signtype', :id => 'password', :placeholder => 'Your Password', :required => '' %>
                    </div>
                    <br>
                    <%= link_to "Forgot your password?", password_reset_path, :class => 'forgot' %>
                    <div class="span3 for-signin">
                      <%= form.submit "SIGN IN", class: "btn color-1 size-1 hover-1", :type => 'submit' %>
                    </div>
                  </form>
              <% end %>
          </div>
        </div>

         <!--Sign up-->
        <div class="col-md-4">
          <h1>Sign Up</h1>
          <div class="row-fluid">
            <%= form_for :login_info, :action => 'create', :url => login_info_create_path do |form| %>
            <!-- %= form_for :sign_in_up, :action => 'create', :url => login_info_create_path do |form| % -->
                <form action="./" class="popup-input-search" method="post">
                  <div class = "span5">
                    <%= form.text_field :email, :class => 'input-signtype', :id => 'email', :placeholder => 'Email', :required => ''%>
                  </div>
                  <br>
                  <div class = "span5">
                    <%= form.password_field :password, :class => 'input-signtype', :id => 'password', :placeholder => 'Password', :required => '' %>
                  </div>
                  <div class="span5">
                    <p style="color:white;">(Should contain one uppercase, one lowercase, one special character, and one digit)</p>
                  </div>
                  <div class="span5">
                    <%= form.password_field :password_confirmation, :class => 'input-signtype', :id => 'confirm', :placeholder => 'Repeat Password', :required => '' %>
                  </div>
                  <br>
                  <div class="span5 for-signin">
                    <!--%= form.submit "SIGN UP", class: "btn color-1 size-1 hover-1", :id => 'sign_in_up', :type => 'submit' %-->
                    <%= form.submit "SIGN UP", class: "btn color-1 size-1 hover-1", :type => 'submit' %>
                  </div>
                </form>
            <% end %>
          </div>
        </div> <!-- end of Sign up-->
      </div>
   </div> <!-- bg head content -->
  </div>
</div>

  <!-- THE FOOTER -->
  <%= render 'shared/footer' %>

  <!-- SCRIPTS	 -->
  <script src="<%= asset_path "jquery.min.js"%>"></script>
  <script src="<%= asset_path "jquery-ui.js"%>"></script>
  <script src="<%= asset_path "bootstrap.min.js"%>"></script>
  <script src="<%= asset_path "idangerous.swiper.min.js"%>"></script>
  <script src="<%= asset_path "jquery.mixitup.js"%>"></script>
  <script src="<%= asset_path "jquery.viewportchecker.min.js"%>"></script>
  <script src="<%= asset_path "global.js"%>"></script>
  <script src="<%= asset_path "application.js"%>"></script>

</div>
</body>
</html>
